<Window x:Class="HoverOverListItems.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HoverOverListItems"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <local:HoverList x:Name="listBox" ItemsSource="{Binding}" SelectionChanged="ItemChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock  Text="{Binding Name}"></TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </local:HoverList>

        <Button Name="Button1"  Content="Button" Width="75" MouseEnter="MouseOverButton" Click="MouseClicked" MouseWheel="MiddleClick"/>

    </Grid>
</Window>
